{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET 5.0",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build5.0",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/WebAppCognito/bin/Debug/net5.0/WebAppCognito.dll",
            "args": [],
            "cwd": "${workspaceFolder}/WebAppCognito",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}